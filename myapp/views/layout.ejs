<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Dating App</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">T-Inder</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Ändere den Navigationsbereich -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Navigation wird dynamisch mit JavaScript gefüllt -->
            </div>
        </div>
    </nav>

    <!-- Content -->
    <main class="container my-4">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="mt-5 py-3 bg-light">
        <div class="container text-center">
            <p class="mb-0">© 2024 Tinder für Binder mit Inder ❤️</p>
        </div>
    </footer>

    <!-- In layout.ejs für Testzwecke -->
    <div style="position: fixed; bottom: 10px; right: 10px; z-index: 999;">
        <button id="test-auth-button" class="btn btn-primary mb-2">Test Auth</button>
        <div>
            <div id="auth-status" class="badge bg-secondary">Status prüfen...</div>
        </div>
    </div>
    <script>
        // Einfache Statusanzeige
        document.addEventListener('DOMContentLoaded', function() {
            const authStatus = document.getElementById('auth-status');
            if (authStatus) {
                const token = localStorage.getItem('token');
                authStatus.className = token ? 'badge bg-success' : 'badge bg-danger';
                authStatus.textContent = token ? 'Angemeldet' : 'Nicht angemeldet';
            }
        });
    </script>
    <script src="/js/test-auth.js"></script>

    <!-- Lade zuerst die Auth-Scripts -->
    <script src="/js/fetch_auth.js"></script>
    <script src="/js/auth.js"></script>
    <script src="/js/main.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
